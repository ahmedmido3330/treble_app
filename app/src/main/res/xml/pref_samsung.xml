<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="AUDIO"
        android:layout="@layout/preference_category_custom">
        <SwitchPreference
            android:layout="@layout/preference_switch_custom"
            android:defaultValue="false"
            android:key="key_samsung_audio_stereo"
            android:title="@string/sterioaudio" />
        <SwitchPreference
            android:layout="@layout/preference_switch_custom"
            android:defaultValue="false"
            android:key="key_samsung_disable_back_mic"
            android:title="@string/disable_backmic"
            android:summary="@string/disablebackmic_summary" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/oneplus_display"
        android:layout="@layout/preference_category_custom">
        <SwitchPreference
            android:layout="@layout/preference_switch_custom"
            android:defaultValue="false"
            android:key="key_samsung_high_brightness"
            android:title="Enable extended brightness range" />
        <SwitchPreference
            android:layout="@layout/preference_switch_custom"
            android:defaultValue="false"
            android:key="key_samsung_glove_mode"
            android:title="@string/glovemode_huawei" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/title_misc_asus"
        android:layout="@layout/preference_category_custom">
        <SwitchPreference
            android:layout="@layout/preference_switch_custom"
            android:defaultValue="false"
            android:key="key_samsung_wireless_charging_transmit"
            android:title="@string/reversecharge" />
        <SwitchPreference
            android:layout="@layout/preference_switch_custom"
            android:defaultValue="false"
            android:key="key_samsung_double_tap_to_wake"
            android:title="@string/title_dt2w" />
        <SwitchPreference
            android:layout="@layout/preference_switch_custom"
            android:defaultValue="false"
            android:key="key_samsung_fod_single_click"
            android:title="@string/title_dt2w" />
        <SwitchPreference
            android:layout="@layout/preference_switch_custom"
            android:defaultValue="false"
            android:key="key_samsung_camera_ids"
            android:title="@string/samsungallcam"
            android:summary="@string/samsung1text" />
		<EditTextPreference
            android:layout="@layout/preference_edittext_custom"
            android:defaultValue="1"
            android:key="key_samsung_flash_strength"
	        android:title="@string/samsungflash"
	        android:summary="@string/samsung2text"
	        android:inputType="number" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/samsungtitle3"
        android:layout="@layout/preference_category_custom">
        <SwitchPreference
            android:layout="@layout/preference_switch_custom"
            android:defaultValue="false"
            android:key="key_samsung_extra_sensors"
            android:title="@string/samsung4" />
        <SwitchPreference
            android:layout="@layout/preference_switch_custom"
            android:defaultValue="false"
            android:key="key_samsung_colorspace"
            android:title="@string/samsung5" />
        <SwitchPreference
            android:layout="@layout/preference_switch_custom"
            android:defaultValue="false"
            android:key="key_samsung_broken_fingerprint"
            android:title="@string/fingbroken" />
        <EditTextPreference
            android:layout="@layout/preference_edittext_custom"
            android:defaultValue="-1"
            android:key="key_samsung_backlight_multiplier"
            android:title="@string/backlightsamsung"
            android:inputType="number" />
    </PreferenceCategory>

</PreferenceScreen>
